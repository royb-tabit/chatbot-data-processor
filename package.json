{
  "dependencies": {
    "dotenv": "^17.2.1",
    "jsonl": "^1.1.2",
    "mongodb": "^6.18.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.2.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "model/**/*.js",
      "!model/**/test/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
